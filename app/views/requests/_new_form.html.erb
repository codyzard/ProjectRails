<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@book, @book.requests.build]) do |f| %>

    
      <%= f.label :Remaing_amount  %>
      <%= f.text_field :quantity ,value: @book.quantity, readonly: true,class: 'form-control'%>

      <%= f.label :number %>
      <%= f.number_field :number, :max => @book.quantity, :min => 1,value: 1 , class: 'form-control'%>

      <%= f.label :borrow_Date_to? %>
      <%= f.date_field :dateto, min: Date.today, value: Date.today+1, class: 'form-control'%>

      <%= f.submit "Borrow", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  
