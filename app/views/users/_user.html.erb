<li> 
   <%= gravatar_for user, size: 50 %>
   <%= link_to user.name , user %>

	<% if current_user.role ==1 && !current_user?(user) %>
	<span>
    	<%= link_to "Edit", edit_user_path(user), class: "btn btn-primary edit" %>
    	<%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?", remote: true },class: "delete_book btn btn-primary delete " %>
	</span>
   <%end%>
</li>
