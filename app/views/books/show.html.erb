
<% provide :title, @book.name %>
<h1><%= @book.name %></h1>

<div class="container">
    <dl>
    <dt>Author:</dt><dd><%= link_to @book.author.name, @book.author %></dd><br>
    <dt>Category:</dt><dd>
    	<% @book.categories.each do |c|%>
    		  <%= link_to c.name, c%> |
    	<% end %>
    <dt>Publisher:</dt><dd><%= @book.publisher %></dd><br>
    <dt>Page:</dt><dd><%= @book.page %></dd><br>
    <dt>Quantity:</dt><dd><%= @book.quantity %></dd><br>
    Quality  : <%= rating_for @book, "quality", star: 5, disable_afer_rate: true %>
  </dl>
  <aside>
      <section>
           <%= render  'comments/form' %>  
      </section>
  </aside>
	
</div>
