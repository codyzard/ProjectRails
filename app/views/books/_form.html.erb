<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      
      <%=f.label :author %>
      <%= f.collection_select :author_id, Author.all, :id, :name, {:class => 'form-control'} %>

	 

      <div>
        <%= f.fields_for :bookcategories do |bc| %>
        <div>
          <%= bc.label :category_id %>
           <%= bc.collection_select :category_id, Category.all, :id, :name,{:class => 'form-control'} %>
        </div> 
        <%= link_to_add_association 'add cc', f, :bookcategories %>
       <% end %>
     </div>


      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: 'form-control' %>

      <%= f.label :page %>
      <%= f.text_field :page, class: 'form-control' %>

      <%= f.label :publisher %>
      <%= f.text_field :publisher, class: 'form-control' %>


      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  

